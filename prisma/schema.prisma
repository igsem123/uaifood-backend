generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id        BigInt    @id @default(autoincrement())
  email     String    @unique @db.VarChar(100)
  name      String    @db.VarChar(50)
  addresses Address[] @relation("UserAddress")
  phone     String    @db.VarChar(20)
  type      UserType  @default(CLIENT)
  password  String    @db.VarChar(255)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  clientOrders    Order[] @relation("ClientOrders")
  confirmedOrders Order[] @relation("ConfirmedOrders")

  refreshTokens RefreshToken[]
  notifications Notification[]
}

model Address {
  id        BigInt   @id @default(autoincrement())
  street    String   @db.VarChar(255)
  number    String   @db.VarChar(20)
  district  String   @db.VarChar(20)
  city      String   @db.VarChar(20)
  state     String   @db.VarChar(20)
  zipCode   String   @db.VarChar(9)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation("UserAddress", fields: [userId], references: [id], onDelete: Cascade)
  userId    BigInt
  orders    Order[]

  @@unique([userId, street, number, zipCode])
}

model RefreshToken {
  id        BigInt   @id @default(autoincrement())
  token     String   @unique @db.VarChar(255)
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    BigInt
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  id                BigInt        @id @default(autoincrement())
  client            User          @relation("ClientOrders", fields: [clientId], references: [id], onDelete: Cascade)
  clientId          BigInt
  confirmedByUser   User?         @relation("ConfirmedOrders", fields: [confirmedByUserId], references: [id])
  confirmedByUserId BigInt?
  address           Address       @relation(fields: [addressId], references: [id])
  addressId         BigInt
  paymentMethod     PaymentMethod
  status            OrderStatus   @default(PENDING)
  items             OrderItem[]
  totalAmount       Decimal       @db.Decimal(10, 2)
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
}

model OrderItem {
  id        BigInt  @id @default(autoincrement())
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId   BigInt
  item      Item    @relation(fields: [itemId], references: [id])
  itemId    BigInt
  quantity  Int
  unitPrice Decimal @db.Decimal(10, 2)
  subtotal  Decimal @db.Decimal(10, 2)
}

model Item {
  id          BigInt      @id @default(autoincrement())
  name        String      @unique @db.VarChar(100)
  description String      @db.VarChar(500)
  unitPrice   Decimal     @db.Decimal(10, 2)
  imageUrl    String?     @db.VarChar(255)
  available   Boolean     @default(true)
  category    Category    @relation(fields: [categoryId], references: [id])
  categoryId  BigInt
  orderItems  OrderItem[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Category {
  id          BigInt   @id @default(autoincrement())
  name        String   @unique @db.VarChar(100)
  description String?  @db.VarChar(500)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  item        Item[]
}

model Notification {
  id        BigInt   @id @default(autoincrement())
  userId    BigInt
  title     String
  body      String
  data      Json? // payload extra (ex: {orderId: 123})
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId, read])
  @@index([createdAt])
}

enum UserType {
  CLIENT
  ADMIN
}

enum PaymentMethod {
  CASH
  DEBIT
  CREDIT
  PIX
}

enum OrderStatus {
  PENDING
  CONFIRMED
  DELIVERED
  CANCELED
}
